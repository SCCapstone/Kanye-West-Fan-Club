<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/characterinfoAbilityDescription"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@color/lightBrown"
        android:fontFamily="monospace"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="Big Bone strikes one target for damage. It then bounces between multiple enemies up to five times."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/characterinfoAbilityName" />

    <TextView
        android:id="@+id/characterinfoAbilityName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/lightBrown"
        android:text="Big Bone"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>